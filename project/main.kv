
<ContentCustomSheet@BoxLayout>:
    orientation: 'vertical'
    size_hint_y: None
    height: "400dp"

    MDToolbar:
        title: 'Custom bottom sheet:'

    ScrollView:

        MDGridLayout:
            cols: 2
            adaptive_height: True


            MDSlider:
                min: 0
                max: 50


            ItemForCustomBottomSheet:
                icon: "exit-to-app"
                text: "Exit"

            MDSlider:
                min: 0
                max: 50


            ItemForCustomBottomSheet:
                icon: "exit-to-app"
                text: "exit"

            MDSlider:
                min: 0
                max: 50


            ItemForCustomBottomSheet:
                icon: "exit-to-app"
                text: "Exit"



<TimeWindow>:
    MDRaisedButton:
        on: root.time()
        text: ''
        on_release: app.secbs()
        font_size: '100sp'
        pos_hint: {"center_x": .5, "center_y": .5}